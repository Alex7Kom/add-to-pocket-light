{
  "name": "Pockeletti",
  "description" : "Add to Pocket with one click from Chrome toolbar",
  "version": "0.3",
  "icons": {
    "16": "logo_16.png",
    "128": "logo_128.png"
  },
  "permissions": [
    "background",
    "storage"
  ],
  "browser_action": {},
  "background": {
    "scripts": [
      "bg.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "manifest_version": 2
}
